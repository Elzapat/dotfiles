{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": [".ccls-root", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
                "highlight": {
                    "lsRanges": true
                },
                "client": {
                    "snippetSupport": true
                }
            }
        }
    },
    "rust.build_on_save": true,
    "rust-client.updateOnStartup": true
}
